<% if current_user.favorite?(micropost) %>
	<%= form_for(current_user.favorite_relationships.find_by(micropost_id: micropost.id),method: :delete) do |f| %>
	  <%= hidden_field_tag :micropost_id, micropost.id %>
	  <%= f.submit 'Undo Favorite', class: 'btn btn-secondary btn-xs' %>
	<% end %>
<% else %>
	<%= form_for(current_user.favorite_relationships.build) do |f| %>
	  <%= hidden_field_tag :micropost_id, micropost.id %>
	  <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
	<% end %>
<% end %>